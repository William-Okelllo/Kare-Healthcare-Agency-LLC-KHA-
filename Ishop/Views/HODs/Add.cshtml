@model IShop.Core.HOD

@{
    ViewBag.Title = "Add HOD member";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
        $("#datepicker2").datepicker();
    });

</script>
<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-10 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #0656A5; color: white; border-radius: 14px ">
                <i class="fa fa-bookmark"></i> Add HOD Member
            </div>
            <div class="card-body" style="background-color: white;border-radius: 24px;">
                <div class="card-body" style="background-color: #ffffffc1;border-radius: 24px;">
                    @using (Html.BeginForm("Add", "Hods", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>


                        <h4 style="text-align:left"> <i class="fa fa-university text-primary"></i>  @ViewBag.Departmentname</h4>
                        <div class="dropdown-divider"></div>
                        <div class="form-row">
                            <div class="form-group col-md-2" id="other">
                                <label><i class="fa fa-tags text-primary"></i>   @Html.LabelFor(model => model.Department_Id)</label>
                                @Html.EditorFor(model => model.Department_Id, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control form-control-sm",
                                   @Placeholder = "Amount",
                                   @Value = ViewBag.DepartId,
                                   @Readonly = true,
                               }
                           })
                            </div>
                            <div class="form-group col-md-3" id="other">
                                <label><i class="fa fa-university text-primary"></i>   @Html.LabelFor(model => model.DprtName)</label>
                                @Html.EditorFor(model => model.DprtName, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control form-control-sm",
                                   @Placeholder = "Amount",
                                   @Value = ViewBag.Departmentname,
                                   @Readonly = true,
                               }
                           })
                            </div>
                            <div class="form-group col-md-3">
                                <label style="font-family:;"> <i class="fa fa-user-check"></i>  @Html.LabelFor(model => model.Staff)  </label>
                                @Html.DropDownList("Staff", new SelectList(ViewBag.l, "UserName", "UserName"), "Select HOD", new { @id = "ddlFruits", @class = "form-control form-control-sm", @required = "required" })
                                @Html.Hidden("UserName", null, new { @id = "hfUserName" })



                                <script type="text/javascript">
                                    $(function () {

                                        $("#Staff").chosen();

                                    });
                                </script>

                            </div>
                        </div>
                        <div class="dropdown-divider"></div>


                        <div class="dropdown-divider"></div>
                        <input type="submit" name="action" value="Add HOD Member" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure you save this add HOD?')" />


                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>

                        <a href="@Request.UrlReferrer" class="btn btn-primary">Back</a>
                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
