@model IShop.Core.Activities

@{
    ViewBag.Title = "Create";
}
<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }

    .form-rounded {
        border-radius: 1rem;
    }

    .form-rounded2 {
        border-radius: 1rem;
    }

    .form-rounded1 {
        border-radius: 1rem;
        border-color: red;
    }

    .form-control:focus {
        border-color: #0faa09;
    }
</style>


<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }



    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    hr {
        border: none;
        color: black;
        background-color: greenyellow;
        height: 1px;
        width: 100%;
    }

    curved-table {
        border-collapse: collapse;
        border-radius: 11px;
        overflow: hidden;
    }

    .curved-table th,
    .curved-table td {
        padding: 10px;
        border-radius: 11px;
        border: 1px solid #00000033;
    }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
    $(function () {
        $("#datepicker2").datepicker();
    });

</script>


@if (TempData["Msg"] != null)
{<div class="row">
        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Msg"]
        </div>
    </div>
}

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>
<!-- /.card-header -->




<div class="card-body">


    <div class="d-flex justify-content-center">
        <ul class="nav nav-tabs" id="myTab" role="tablist" style="background-color:white;border-radius:14px">

            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false"><i class="fa fa-plus-circle"></i>  Add Direct</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-InDirect-tab" data-toggle="pill" href="#pills-InDirect" role="tab" aria-controls="pills-InDirect" aria-selected="false"><i class="fa fa-plus-circle"></i>  Add InDirect</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"><i class="fa fa-user-clock"></i> Added Activites</a>
            </li>


        </ul>
    </div>
    @using (Html.BeginForm("add", "Activities", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="tab-content" id="pills-tabContent">


            <form>
                <div class="tab-pane fade show active" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">

                    <div class="card-header" style="background-color: #0656A5; color: white; border-radius: 14px ">
                        @{
                            // Assuming ViewBag.Date contains a DateTime object
                            DateTime dateValue = (DateTime)ViewBag.Date;
                        }
                        <i class="fa fa-bookmark"></i>  Direct Tasks  @dateValue.ToString("dddd") @dateValue.ToString("dd") @dateValue.ToString("MMMM") @dateValue.ToString("MM/dd/yyyy")
                    </div>
                    <div class="card-body" style="background-color: white;border-radius: 24px;">



                        <div class="form-row">

                            <div class="form-group col-md-3" style="display:none">
                                <label><i class=" fa fa-calendar-check text-primary"></i>   @Html.LabelFor(model => model.CreatedOn)</label>
                                @Html.EditorFor(model => model.CreatedOn, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control form-control-sm",
                                   @Placeholder = "Record",
                                   @Value = DateTime.Now,
                                   @ReadOnly = true,


                               }
                           })

                            </div>
                            <div class="form-group col-md-2" style="display: none">
                                <label><i class="fa fa-tags text-primary"></i> @Html.LabelFor(model => model.Day_Date)</label>
                                @Html.EditorFor(model => model.Day_Date, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control form-control-sm",
                                        @Value = @dateValue.ToString("MM/dd/yyyy"),
                                        @Readonly = true,

                                    }
                                })
                            </div>
                            <div class="form-group col-md-2" style="display:none">
                                <label><i class="fa fa-calendar-day text-primary"></i> @Html.LabelFor(model => model.Day)</label>
                                @Html.EditorFor(model => model.Day, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control form-control-sm",
                                        @Value = ViewBag.Weekday,
                                        @Readonly = true,

                                    }
                                })
                            </div>
                            <div class="form-group col-md-3" style="display:none">
                                <label><i class="fa fa-user-circle text-primary"></i> @Html.LabelFor(model => model.User)</label>
                                @Html.EditorFor(model => model.User, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control form-control-sm",
                                        @Value = User.Identity.Name,
                                        @Readonly = true,

                                    }
                                })
                            </div>
                            <div class="form-group col-md-3" style="display: none ">
                                <label><i class="fa fa-user-circle text-primary"></i> @Html.LabelFor(model => model.WeekId)</label>
                                @Html.EditorFor(model => model.WeekId, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control form-control-sm",
                                   @Value = ViewBag.Weekid,
                                   @Readonly = true,

                               }
                           })
                            </div>


                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label><i class="fa fa-suitcase text-primary"></i> @Html.LabelFor(model => model.Project_Name) </label>
                                @Html.DropDownList("Project_Name", ViewBag.Project as SelectList, "--Select Project  --", new { @class = "form-control ", })
                            </div>
                            <div class="form-group col-md-4">
                                <label><i class="fa fa-clock text-primary"></i> @Html.LabelFor(model => model.Name) </label>
                                @Html.DropDownList("Name", ViewBag.Direct as SelectList, "--Select Phase --", new { @class = "form-control ", })
                            </div>
                            <script>
                                $(document).ready(function () {
                                    // Hook up change event for the dropdown
                                    $("#Project_Name").change(function () {
                                        toggleCommentsValidation();
                                    });

                                    // Toggle validation on initial load
                                    toggleCommentsValidation();
                                });

                                function toggleCommentsValidation() {
                                    // Get the selected value from the dropdown
                                    var selectedValue = $("#Project_Name").val();

                                    // Get the textarea element
                                    var commentsTextArea = $("textarea[name='direct_Comments']");

                                    // Set or remove 'required' attribute based on the selected value
                                    commentsTextArea.prop("required", selectedValue !== "");
                                }
                            </script>
                            <script type="text/javascript">
                                $(function () {
                                    $("#Project_Name").chosen();
                                    $("#Indixrect").chosen();
                                    $("#Name").chosen();

                                });
                            </script>
                            <div class="form-group col-md-2">
                                <label><i class="fa fa-user-clock text-primary"></i> @Html.LabelFor(model => model.Hours)</label>
                                @Html.EditorFor(model => model.Hours, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control form-control-sm",
                                        @Placeholder = "No. of Hours",

                                        @id = "hoursInput" // Add an ID to the input field for easy access in JavaScript
                                    }
                                })
                            </div>

                            <script>
                                // Add an event listener to the input field
                                document.getElementById("hoursInput").addEventListener("input", function () {
                                    // Get the current value of the input field
                                    var inputValue = this.value;

                                    // Convert the input value to a number
                                    var hours = parseFloat(inputValue);

                                    // Check if the value is greater than 12
                                    if (hours > 12) {
                                        // If greater than 12, set the value to 12
                                        this.value = 12;
                                    }
                                });
                            </script>


                        </div>


                        <div class="dropdown-divider"></div>
                        <label><i class="fa fa-comment-dots text-primary"></i> @Html.LabelFor(model => model.direct_Comments) </label>
                        <div class="form-row">


                            @Html.TextAreaFor(model => model.direct_Comments, 4, 70, htmlAttributes: new
     {
         style = "width: 70%; max-width:70%;",
         @placeholder = "Additional information",
         @autofocus = "",
         @class = "form-control form-rounded2",
         @data_required_if = "#Project_Name"  // Custom attribute for conditional validation
     })
                            @Html.ValidationMessageFor(model => model.direct_Comments, "", new { @class = "text-danger" })
                        </div>
                        <script>
                            document.getElementById("direct_Comments").addEventListener("paste", function (event) {
                                // Prevent the default paste behavior
                                event.preventDefault();

                                // Get the pasted content as plain text
                                var text = (event.clipboardData || window.clipboardData).getData("text/plain");

                                // Insert the plain text into the textarea as HTML
                                document.execCommand("insertHTML", false, text);
                            });
                        </script>



                        <div class="dropdown-divider"></div>
                        <input type="submit" name="action" value="Add Activity" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure you save this Timesheet?')" />


                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>

                        <a href="@Request.UrlReferrer" class="btn btn-primary">Back</a>

                    </div>
                </div>
                <div class="tab-pane fade show " id="pills-InDirect" role="tabpanel" aria-labelledby="pills-InDirect-tab">
                    <div class="card-header" style="background-color: #0656A5; color: white; border-radius: 14px ">

                        <i class="fa fa-bookmark"></i>  InDirect Tasks  @dateValue.ToString("dddd") @dateValue.ToString("dd") @dateValue.ToString("MMMM") @dateValue.ToString("MM/dd/yyyy")
                    </div>
                    <div class="card-body" style="background-color: white;border-radius: 24px;">
                        <script type="text/javascript">
                            $(function () {
                                $("#Project_Name").chosen();
                                $("#Indicrect").chosen();
                                $("#Name").chosen();

                            });
                        </script>
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label><i class="fa fa-book-reader text-primary"></i> @Html.LabelFor(model => model.Indirect) </label>
                                @Html.DropDownList("Indirect", ViewBag.InDirect as SelectList, "--Select InDirect  --", new { @class = "form-control ", })
                            </div>
                            <div class="form-group col-md-2">
                                <label><i class="fa fa-user-clock text-primary"></i> @Html.LabelFor(model => model.Indirect_Hours)</label>
                                <input id="Indirect_Hours" name="Indirect_Hours" type="number" class="form-control  form-control-sm" placeholder="Total Hours" />
                            </div>
                            <script>
                                // Add an event listener to the input field
                                document.getElementById("Indirect_Hours").addEventListener("input", function () {
                                    // Get the current value of the input field
                                    var inputValue2 = this.value;

                                    // Convert the input value to a number
                                    var hours2 = parseFloat(inputValue2);

                                    // Check if the value is greater than 12
                                    if (hours2 > 12) {
                                        // If greater than 12, set the value to 12
                                        this.value = 12;
                                    }
                                });
                            </script>
                        </div>
                        <div class="dropdown-divider"></div>
                        <label><i class="fa fa-comment-dots text-primary"></i> @Html.LabelFor(model => model.Indirect_Comments) </label>
                        <div class="form-row">


                            @Html.TextAreaFor(model => model.Indirect_Comments, 4, 70, htmlAttributes: new
                       {
                           style = "width: 70%; max-width:70%;",
                           @placeholder = "Additional information",
                           @autofocus = ""
                           ,
                           @class = "form-control form-rounded2"

                       })
                        </div>
                        <script>
                            document.getElementById("Indirect_Comments").addEventListener("paste", function (event) {
                                // Prevent the default paste behavior
                                event.preventDefault();

                                // Get the pasted content as plain text
                                var text = (event.clipboardData || window.clipboardData).getData("text/plain");

                                // Insert the plain text into the textarea as HTML
                                document.execCommand("insertHTML", false, text);
                            });
                        </script>
                        <div class="dropdown-divider"></div>
                        <input type="submit" name="action" value="Add Activity" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure you save this Timesheet?')" />


                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>

                        <a href="@Request.UrlReferrer" class="btn btn-primary">Back</a>
                    </div>
                    
                </div>




                <div class="tab-pane fade  active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

                    <h6 style="text-align:right;color:navy"><i class="fa fa-bookmark"></i>    <b>@dateValue.ToString("dddd") @dateValue.ToString("dd") @dateValue.ToString("MMMM") @dateValue.ToString("yyyy")</b></h6>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover   table-condensed table-striped table-hover sortable curved-table">
                            <thead style="color:white">
                                <tr><th style="background-color: #0656A5; "> <i class="fa fa-bookmark text-white"></i> Added Activities</th></tr>
                            </thead>


                            <thead style="font-family:Calibri">
                                <tr style="color:white">
                                    <th style="background-color: #0656A5; "> Direct Category</th>
                                    <th style="background-color: #5e5d5d; "> InDirect Category</th>

                                </tr>
                            </thead>

                            <tbody style="font-family:Calibri">
                                @foreach (var item2 in ViewBag.Activities)
                                {


                                    <tr data-widget="expandable-table" aria-expanded="false">


                                        <td style="background-color: white; width: 40% ">
                                            <h5><b>PROJECT NAME :</b> @item2.Project_Name</h5>
                                            <div class="dropdown-divider"></div>
                                            <h5>
                                                <span class="badge badge-primary"><medium><i class="fa fa-bookmark text-white"></i> PHASE : @item2.Name </medium></span>
                                                ||
                                                <span class="badge badge-success"><medium><i class="fa fa-user-clock text-white"></i> Hours : @item2.Hours </medium></span>
                                            </h5>
                                            <div class="dropdown-divider"></div>
                                            <p><b><i class="fa fa-comments text-primary"></i> Comments</b></p>
                                            <p class="limited-lines"><small>@item2.direct_Comments</small></p>

                                        </td>
                                        <td style="background-color: whitesmoke; width: 40% ">

                                            <h5>
                                                <b>TOPIC :</b> @item2.Indirect

                                            </h5>
                                            <div class="dropdown-divider"></div>
                                            <h5><span class="badge badge-warning"><medium><i class="fa fa-user-clock text-white"></i>Total Hours : @item2.Indirect_Hours </medium></span></h5>
                                            <div class="dropdown-divider"></div>
                                            <p><b><i class="fa fa-comments text-warning"></i> Comments</b></p>
                                            <p class="limited-lines"><small>@item2.Indirect_Comments</small></p>
                                        </td>




                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>
                </div>


            </form>
        </div>
       
        
    }

   
</div>
