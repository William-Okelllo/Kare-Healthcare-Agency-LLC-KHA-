@using PagedList
@using PagedList.Mvc;
@model IPagedList<Ishop.Models.Ticketing_Clients>


@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.61);">


    <div class="card-header" style="background-color: #001F3F">
        <h3 class="card-title" style="color:white">
            <i class="fa fa-handshake"></i>
            Ticketing Clients
        </h3>




        <div style="text-align: right; color: white ">
            @using (Html.BeginForm("Index", "Ticketing_Clients", FormMethod.Get))
            {






                <a style="font-family: Calibri"> Client Name</a>
                @Html.TextBox("search", null, new { @class = "form-rounded2", @PlaceHolder = "  Client Name" })
                <button type="submit" value="search" class="btn btn-sm btn-warning">
                    <i class="fas fa-search"></i>
                </button>

                @Html.ActionLink(" Add  Client ", "Create", "Ticketing_Clients", null, new { @class = "btn btn-sm btn-default btn" })


            }


        </div>
    </div>






    @if (TempData["Msg"] != null)
    {<div class="row">
            <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Msg"]
            </div>
        </div>
    }

    <script>
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 2000);
    </script>









    <div class="table-responsive" style="min-height: 400px">
        <table class="table table-bordered table-hover  text-nowrap table-condensed table-striped table-hover sortable">
            <tr style="background-color: #001F3F ;color:white">
                <th>
                    <i class="fa fa-calendar"></i>  Added On
                </th>
                <th>
                    <i class="fa fa-users"></i> Client
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="background-color:whitesmoke">
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        <i class="fa fa-user-circle text-primary"></i>  @Html.DisplayFor(modelItem => item.Client)
                    </td>

                    <td>
                        <i class="fa fa-trash text-danger nav-icon"></i>
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>



        <style>
            .ul.pagination {
                display: inline-block;
                padding: 1;
                margin: 1;
                border-radius: 0.5rem;
            }

            ul.pagination li {
                display: inline;
            }

                ul.pagination li a {
                    color: black;
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color;
                    background-color: #ddd;
                    border-color: white;
                    border-radius: 0.5rem;
                }

                    ul.pagination li a.active {
                        background-color: dodgerblue;
                        color: white;
                    }

                    ul.pagination li a:hover:not(.active) {
                        background-color: dodgerblue;
                        border-radius: 0.5rem;
                    }
        </style>
        <div id="container" style="text-align:left">

            <div class="pagination" style="text-align:left">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["SearchBy"], search = Request.QueryString["Search"] })
              , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = true })
            </div>
        </div>


    </div>