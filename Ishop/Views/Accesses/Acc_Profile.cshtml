                </div>
                <div class="card-body text-left">


                    @foreach (var item in ViewBag.F)
                    {

                        <a href="#" class="nav-link" style="color:midnightblue">
                            <i class="fa fa-id-badge"></i> Account ID <span class="float-right" style="font-size: 90%">
                                <i class="fa fa-user-md"></i>

                                @item.id

                            </span>
                        </a>


                        <a href="#" class="nav-link" style="color:midnightblue">
                            <i class="fa fa-envelope"></i>  Email ID <span class="float-right" style="font-size: 90%">
                                <i class="fa fa-user-md"></i>

                                @item.email

                            </span>
                        </a>
                         <a href="#" class="nav-link" style="color:midnightblue">
                            <i class="fa fa-phone"></i> Phone Number <span class="float-right" style="font-size: 90%">


    @if (item.PhoneNumber == null)
    {
                           <small><i class="fa fa-times-circle text-danger"></i> Not set</small>
    }
    else
    {@item.PhoneNumber <small>@Html.ActionLink("Update My Number", "AddPhoneNumber", "Manage")</small>}
</span>
                        </a>
                        <a href="#" class="nav-link" style="color:forestgreen">
                            <i class="fa fa-shield-virus"></i>  Access level <span class="float-right" style="font-size: 90%">
                                <i class="fa fa-user-md"></i>

                                @item.Role

                            </span>
                        </a>
                        <div style="text-align:right">
                            @Html.ActionLink("Update Email & Phone", "AddPhoneNumber", "Manage", null, new { @class = "btn btn-sm  btn-success btn" })
                        </div>
                        <hr />
                        <p>Actions</p>
                        <a href="#" class="nav-link" style="color:navy">
                            <i class="fa fa-key"></i>  Change Password
                            <span class="float-right" style="font-size: 90%">


                                @Html.ActionLink("Change Current Password", "ChangePassword", "Manage", null, new { @class = "btn btn-sm  btn-success btn" })

                            </span>
                        </a>


                    }



                   
                </div>
            </div>
        </div>
    </div>