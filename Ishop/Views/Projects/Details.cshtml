<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
    $(function () {
        $("#datepicker2").datepicker();
    });

</script>


@if (TempData["Msg"] != null)
{<div class="row">
        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Msg"]
        </div>
    </div>
}

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>
<!-- /.card-header -->






    <div class="col-md-12 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #0656A5; color: white; border-radius: 14px ">
                <i class="fa fa-bookmark"></i> Project Details
            </div>
            <div class="card-body" style="background-color: white;border-radius: 24px;">
                
                    @using (Html.BeginForm("create", "projects", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <div class="card-body" style="background-color: #eeeeee;border-radius: 14px;">
                            <h3><i class=" fa fa-bookmark text-primary"></i>   @Model.Project_Name</h3>
                            <hr />
                            <div class="form-row">

                                <div class="form-group col-md-2">
                                    <label><i class=" fa fa-calendar-check text-primary"></i>   @Html.LabelFor(model => model.CreatedOn)</label>
                                    @Html.EditorFor(model => model.CreatedOn, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control form-control-sm",
                                       @Placeholder = "Record",

                                       @ReadOnly = true,


                                   }
                               })

                                </div>

                                <div class="form-group col-md-3">
                                    <label><i class=" fa fa-folder-open text-primary"></i>   @Html.LabelFor(model => model.Project_Name)</label>
                                    @Html.EditorFor(model => model.Project_Name, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control form-control-sm",
                                       @Placeholder = "Project_Name",
                                       @ReadOnly = true,


                                   }
                               })

                                </div>
                                <div class="form-group col-md-2">
                                    <label><i class=" fa fa-folder-open text-primary"></i>   @Html.LabelFor(model => model.Budget)</label>
                                    @Html.EditorFor(model => model.Budget, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control form-control-sm",
                                       @Placeholder = "Project_Name",
                                       @ReadOnly = true,


                                   }
                               })

                                </div>
                                <div class="form-group col-md-4">
                                    <label><i class=" fa fa-map-marker text-primary"></i>   @Html.LabelFor(model => model.location)</label>
                                    @Html.EditorFor(model => model.location, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control form-control-sm",
                                       @Placeholder = "location",
                                       @ReadOnly = true,


                                   }
                               })
                                    <script type="text/javascript">
                                        google.maps.event.addDomListener(window, 'load', function () {
                                            var places = new google.maps.places.Autocomplete(document.getElementById('location'));
                                            google.maps.event.addListener(places, 'place_changed', function () {
                                                var place = places.getPlace();
                                                document.getElementById('Latitude').value = place.geometry.location.lat();
                                                document.getElementById('Longitude').value = place.geometry.location.lng();
                                            });
                                        });
                                    </script>
                                </div>




                            </div>
                        </div>
                       
                            <div class="dropdown-divider"></div>

                            <ul class="nav nav-tabs" id="myTab" role="tablist">

                                <li class="nav-item">
                                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false"><i class="fa fa-cogs"></i>  Phases</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"><i class="fa fa-users"></i> Assigned Team</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-Performance-tab" data-toggle="pill" href="#pills-Performance" role="tab" aria-controls="pills-Performance" aria-selected="false"><i class="fa fa-chart-line"></i> Performance</a>
                                </li>

                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                                    <div style="text-align:right">
                                        <a href="@Url.Action("create", "Phase", new { id = Model.Id })" class="btn-sm btn btn-primary btn"><i class="fa fa-plus-circle text-black"></i> Add Phases</a>
                                        ||
                                        <a href="@Url.Action("Edit", "Projects", new { id = Model.Id })" class="btn-sm btn btn-warning btn"><i class="fa fa-pen-nib text-black"></i> Update Project Info </a>
                                    </div>

                                    <div class="dropdown-divider"></div>
                                   
                                        <div class="table-responsive" style="min-height: 100px">
                                            <table class="table table-bordered table-hover   table-condensed table-striped table-hover sortable curved-table">


                                                <thead style="font-family:Calibri">
                                                    <tr style="color:white">
                                                        <th style="background-color: #263544; "><i class="fa fa-bookmark text-white"></i>  Phase</th>
                                                        <th style="background-color: #263544; "><i class="fa fa-receipt text-white"></i> Allocated Budget</th>
                                                        <th style="background-color: #263544; "><i class="fa fa-calendar text-white"></i>  Duration</th>
                                                        <th style="background-color: #263544; "> Action</th>
                                                    </tr>
                                                </thead>

                                                <tbody style="font-family:Calibri">
                                                    @foreach (var item2 in ViewBag.Phase)
                                                    {


                                                        <tr data-widget="expandable-table" aria-expanded="false">


                                                            <td style="background-color:white"> <i class="fa fa-bookmark text-primary"></i> @item2.Name</td>
                                                            <td style="background-color:white"> <i class="fa fa-suitcase text-primary"></i> @item2.Budget.ToString("#,##0.00")</td>
                                                            <td style="background-color:white">
                                                                <small>
                                                                    <i class="fa fa-calendar-day text-primary"></i>
                                                                    @item2.Start_Date.ToString("dd-MMMM-yyyy")  --<i class="fa fa-calendar-day text-primary"></i> @item2.End_Date.ToString("dd-MMMM-yyyy")
                                                                </small>
                                                            </td>

                                                            <td style="background-color:ghostwhite">

                                                                <div class="btn-group dropdown">
                                                                    <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <i class="fa fa-hashtag"></i>  . Action
                                                                    </button>
                                                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">

                                                                        <div class="dropdown-divider"></div>
                                                                        <a href="@Url.Action("Edit", "Phase", new { id = item2.Id })" class="dropdown-item">
                                                                            <i class="fa fa-pen-nib text-primary"></i> Update/Edit Phase
                                                                        </a>

                                                                        <div class="dropdown-divider"></div>
                                                                        <a class="dropdown-item" onclick="if (confirm('Are you sure you want to delete this Phase ')) { window.location.href = '@Url.Action("Delete", "Phase", new { id = item2.Id })'; }">
                                                                            <i class="fa fa-times-circle text-danger"></i> Drop Phase
                                                                        </a>
                                                                        <script>
                                                                            $(function () {
                                                                                $('#Deny').click(function () {
                                                                                    if (confirm('Are you sure?')) {
                                                                                        window.location.href = $(this).data('url');
                                                                                    }
                                                                                });
                                                                            });
                                                                        </script>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>

                                                    }

                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                    

                                    <div class="tab-pane fade show " id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                        <div style="text-align:right">
                                            <a href="@Url.Action("Add", "teams", new {Project=Model.Project_Name, id = Model.Id })" class="btn-sm btn btn-primary btn"><i class="fa fa-users text-black"></i> Add Team members</a>
                                        </div>
                                        <div class="table-responsive" >
                                            <table class="table table-bordered table-hover   table-condensed table-striped table-hover sortable curved-table">


                                                <thead style="font-family:Calibri">
                                                    <tr style="color:white">
                                                        <th style="background-color: #0656A5; "><i class="fa fa-user-circle"></i>  AddedOn</th>
                                                        <th style="background-color: #0656A5; "><i class="fa fa-folder-open"></i>  Project Phase </th>
                                                        <th style="background-color: #0656A5; ">Team Member </th>
                                                        <th style="background-color: #0656A5; ">Allocated Hours </th>
                                                        <th style="background-color: #0656A5; "> Action</th>
                                                    </tr>
                                                </thead>

                                                <tbody style="font-family:Calibri">
                                                    @foreach (var item2 in ViewBag.Team)
                                                    {
                                                        <tr data-widget="expandable-table" aria-expanded="false">
                                                            <td style="background-color:white"> <i class="fa fa-calendar-check text-primary"></i>  @item2.CreatedOn.ToString("dd-MMM-yyyy") </td>
                                                            <td style="background-color:white"> <i class="fa fa-clipboard-list text-primary"></i> @item2.Name</td>
                                                            <td style="background-color:white"> <i class="fa fa-bookmark text-primary"></i> @item2.Username</td>
                                                            <td style="background-color:white"> <i class="fa fa-clock text-primary"></i> @item2.Hours <small><b>Hrs</b></small></td>
                                                            <td style="background-color:ghostwhite">

                                                                <div class="btn-group dropdown">
                                                                    <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <i class="fa fa-hashtag"></i>  . Action
                                                                    </button>
                                                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">


                                                                        <div class="dropdown-divider"></div>
                                                                        <a href="@Url.Action("Edit", "teams", new { id = item2.Id })" class="dropdown-item">
                                                                            <i class="fa fa-pen-nib text-primary"></i> Update/Edit Team Member
                                                                        </a>
                                                                        <div class="dropdown-divider"></div>
                                                                        <a class="dropdown-item" onclick="if (confirm('Are you sure you want to delete this team member ')) { window.location.href = '@Url.Action("Delete", "teams", new { id = item2.Id, })'; }">
                                                                            <i class="fa fa-times-circle text-danger"></i> Drop Team Member
                                                                        </a>
                                                                        <script>
                                                                            $(function () {
                                                                                $('#Deny').click(function () {
                                                                                    if (confirm('Are you sure?')) {
                                                                                        window.location.href = $(this).data('url');
                                                                                    }
                                                                                });
                                                                            });
                                                                        </script>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade show " id="pills-Performance" role="tabpanel" aria-labelledby="pills-Performance-tab">
                                        <div class="dropdown-divider"></div>
                                        <div class="table-responsive" style="min-height: 100px">
                                            <table class="table table-bordered table-hover   table-condensed table-striped table-hover sortable curved-table">


                                                <thead style="font-family:Calibri">
                                                    <tr style="color:white">
                                                        <th style="background-color: #263544; "><i class="fa fa-user-circle"></i>  Phase</th>
                                                        <th style="background-color: #263544; ">Budget & Balance </th>
                                                        <th style="background-color: #263544; ">logged Amount</th>

                                                    </tr>
                                                </thead>
                                                <tbody style="font-family:Calibri">
                                                    @foreach (var resultItem in ViewBag.ResultList)
                                                    {


                                                        <tr data-widget="expandable-table" aria-expanded="false">

                                                            <td style="background-color:white">
                                                                <i class="fa fa-bookmark text-primary"></i> @resultItem.Phase
                                                                <div class="dropdown-divider"></div>
                                                                <small>  <b style="color:navy"><i class="fa fa-bookmark"></i>  @resultItem.Project_Name</b></small>
                                                                <small>
                                                                    <b style="color:dimgray">
                                                                        ( <i class="fa fa-calendar-day text-gray"></i> @resultItem.StartDate.ToString("dd-MMM-yyyy")
                                                                        --<i class="fa fa-calendar-day text-gray"></i> @resultItem.End_Date.ToString("dd-MMM-yyyy")
                                                                    </b> )
                                                                </small>

                                                            </td>
                                                            <td style="background-color:white">
                                                                <span class="badge badge-success"><medium><i class="fa fa-bookmark text-white"></i> Allocated Budget : </medium></span> @resultItem.Budget.ToString("#,##0.00")
                                                                <div class="dropdown-divider"></div>
                                                                <span class="badge badge-secondary"><medium><i class="fa fa-bookmark text-white"></i> Balance : </medium></span> @resultItem.Balance.ToString("#,##0.00")

                                                            </td>
                                                            <td style="background-color:white">
                                                                <i class="fa fa-suitcase text-primary"></i> @resultItem.logged.ToString("#,##0.00")
                                                                <div class="dropdown-divider"></div>
                                                                <small>
                                                                    <button type="button" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
                                                                        Drill-Down
                                                                    </button>
                                                                </small>



                                                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title" id="exampleModalLongTitle">Drill Down Section</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                    <span aria-hidden="true">&times;</span>
                                                                                </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                               
                                                                                <p style="text-align:center">Kindly note that we are working on the drill-down section to enable visibility into 
                                                                                the actual drill-down of every phase based on the budgeted amount vs the logged amount from the staff members respectively.</p>
                                                                                <p>thank you </p>

                                                                                <div class="dropdown-divider"></div>
                                                                                <b style="text-align:center;color:forestgreen"><i class="fa fa-spin fa-circle-notch"></i>  DEVELOPMENT MODE ACTIVE -SEC [PHASE DRILL-DOWN]</b>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                            </td>



                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>

                                        </div>

                                        </div>
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn" })
</form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
