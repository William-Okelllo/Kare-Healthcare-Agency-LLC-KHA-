                                                                    }
                                                                </style>

                                                                <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI/tZ1Z1U3ZlMnfybT8lPj9lOIq6u8eTNCtWlq/0=" crossorigin="anonymous"></script>
                                                                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha256-bNVT/99KoIu9P0Eu3gW+ioTZq+Nq+ENJZ5e9dz+qDEU=" crossorigin="anonymous"></script>
                                                                <script>
    $(document).ready(function () {
        var drillDownUrl = "@Url.Action("DrillDown", "Projects")";

        $(".viewTasksLink").on("click", function (e) {
            e.preventDefault();

            var weekNumber = $(this).data("week-number");
            var user = $(this).data("user");
            var modalId = $(this).data("target");

            $.ajax({
                url: drillDownUrl,
                type: "GET",
                data: { projectName: weekNumber, Phase: user },
                success: function (result) {
                    console.log("Ajax request successful");
                    console.log("Result:", result); // Log the result

                    // Check if the result is what you expect before loading it
                    if (result && result.length > 0) {
                        $(modalId + " .modal-content #modalContent").html(result);
                    } else {
                        console.log("Empty or unexpected result. Not updating modal content.");
                    }
                    
                },
                error: function (xhr, status, error) {
                    console.log("Error in Ajax request");
                    console.log("Status: ", status);
                    
                   
                }
            });
        });

    });
