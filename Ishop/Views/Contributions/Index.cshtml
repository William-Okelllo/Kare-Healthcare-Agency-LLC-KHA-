@using PagedList;
@using PagedList.Mvc;
@model IPagedList<IShop.Core.Contribution>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Contributions";
}


<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }
</style>
<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }

    .limited-lines {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Number of lines to show */
        -webkit-box-orient: vertical;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.78);">


    <div class="card-header col-md-12 col-sm-12 col-12 " style="background-color: #0656A5; color: white; border-radius: 14px ">
        <h4 class="card-title" style="color:white">
            <i class="fa fa-coins"></i>
            Parents Contributions
        </h4>

        <div style="text-align: right; color: white ">
            @using (Html.BeginForm("Index", "contributions", FormMethod.Get))
            {

                <a style="font-family: Calibri">  Project No</a>
                @Html.TextBox("search", null, new { @class = "form-rounded2", @PlaceHolder = "Project No" })
                <button type="submit" value="search" class="btn btn-sm btn-warning">
                    <i class="fas fa-search"></i>
                </button>

                @Html.ActionLink("Collect Contribution ", "Index", "Children", null, new { @class = "btn btn-sm btn-default btn" })
            }

        </div>



    </div>






    @if (TempData["Msg"] != null)
    {<div class="row">
            <div class="alert alert-warning col-md-6 col-md-offset-4" align="center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Msg"]
            </div>
        </div>
    }

    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    </script>



    <div>









        <div class="table-responsive">
            <table class="table table-bordered table-hover   table-condensed table-striped table-hover sortable curved-table">


                <thead>
                    <tr style="color:white">

                        <th style="background-color: #0656A5">Project No</th>
                        <th style="background-color: #0656A5 ">Paid</th>
                        <th style="background-color: #0656A5 ">Balance | Intial  </th>
                        <th style="background-color: #0656A5 ">Paid for Months</th>
                       

                        <th style="background-color: #0656A5">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td style="background-color: white"><span class="badge badge-warning"><i class="fa fa-bookmark text-white"></i>  KE 610</span>  <span class="badge badge-secondary"><b>@item.Project_No</b></span> </td>


                            <td style="background-color: white">
                                <i class="fa fa-coins text-primary"></i>  @item.Paid.ToString("#,##0.00")
                            </td>
                            <td style="background-color: white">
                                <span class="badge badge-warning"><i class="fa fa-coins text-white"></i> Balance :  @item.Balance.ToString("#,##0.00") </span> ||
                                <span class="badge badge-success"><i class="fa fa-coins text-white"></i> Intial :  @item.Total.ToString("#,##0.00") </span>
                            </td>
                            <td style="background-color: white">
                                <i class="fa fa-clock text-primary"></i>  @item.Month
                            </td>
                            
                            <td style="background-color:ghostwhite">

                                <div class="btn-group dropdown">
                                    <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-hashtag"></i>  . Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">

                                        <div class="dropdown-divider"></div>
                                        <a href="@Url.Action("Receipt", "contributions", new { id = item.Id })" class="dropdown-item">
                                            <i class="fa fa-file-pdf text-primary"></i> Print Receipt
                                        </a>
                                        



                                       
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>




            <style>
                .ul.pagination {
                    display: inline-block;
                    padding: 1;
                    margin: 1;
                    border-radius: 0.5rem;
                }

                ul.pagination li {
                    display: inline;
                }

                    ul.pagination li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                        transition: background-color;
                        background-color: #ddd;
                        border-color: white;
                        border-radius: 0.5rem;
                    }

                        ul.pagination li a.active {
                            background-color: dodgerblue;
                            color: white;
                        }

                        ul.pagination li a:hover:not(.active) {
                            background-color: dodgerblue;
                            border-radius: 0.5rem;
                        }
            </style>
            <div id="container" style="text-align:left">

                <div class="pagination" style="text-align:left">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["SearchBy"], search = Request.QueryString["Search"] })
                  , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = true })
                </div>
            </div>
        </div>


    </div>

</div>





