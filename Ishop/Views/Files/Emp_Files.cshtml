@using PagedList
@using PagedList.Mvc;



@{
    ViewBag.Title = "Employees Files";
}


<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }
</style>



<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 40%;
        border-color: dodgerblue;
    }

    .bwe {
        font-family: Quicksand;
    }
</style>
<div class="card" style="background-color: #ffffffd9">

    <div class="card-header" style="background-color: #343a40">
        <h3 class="card-title" style="color:white;text-align:center">
            <i class="fa fa-folder nav-icon"></i>
            Employees Files
        </h3>


        @if (TempData["Msg"] != null)
        {<div class="row">
                <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Success!</strong> @TempData["Msg"]
                </div>
            </div>
        }
        <script>
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 2000);
        </script>




        <div style="text-align: right; color: white ">
            @using (Html.BeginForm("Emp_Files", "Files", FormMethod.Get))
            {




            <a style="font-family: Calibri"> Employee Name</a>
                @Html.TextBox("search", null, new { @class = "form-rounded2", @PlaceHolder = "Employee Name " })



                <button type="submit" value="search" class="btn btn-sm btn-default">
                    <i class="fas fa-search"></i>
                </button>
            }
        </div>



    </div>



  



          
                
                <div class="table-responsive" style="min-height: 400px">
                    <table class="table table-bordered table-hover  text-nowrap">


                        <thead>
                            <tr style="color:navy">
                                <th style="background-color: whitesmoke; ">Uploaded On </th>
                                <th style="background-color: whitesmoke; ">Category </th>
                                <th style="background-color: whitesmoke; ">File </th>
                                <th style="background-color: whitesmoke; ">Employee </th>
                                <th style="background-color: whitesmoke; ">Agency </th>
                                <th style="background-color: whitesmoke; ">Action </th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                    <tbody>
                        <tr data-widget="expandable-table" aria-expanded="false">

                            <td style="background-color:white">@item.UploadedOn.ToString("dd-MMMM-yyyy")</td>
                            <td style="background-color:white">@item.Category</td>
                            <td style="background-color:white">
                                @if (@Path.GetExtension(@item.Path) == ".jpg")
                                {
                                    <i class="fa fa-images"></i>

                                }
                                else if (@Path.GetExtension(@item.Path) == ".png")
                                {
                                    <i class="fa fa-images"></i>

                                }

                                else if (@Path.GetExtension(@item.Path) == ".xlsx")
                                {
                                    <i class="fa fa-file-excel"></i>


                                }
                                else if (@Path.GetExtension(@item.Path) == ".docx")
                                {
                                    <i class="fa fa-file-word"></i>

                                }

                                else if (@Path.GetExtension(@item.Path) == ".pdf")
                                {
                                    <i class="fa fa-file-pdf"></i>

                                }  @item.Name

                            </td>
                            <td style="background-color:white"> @item.Access</td>
                            <td style="background-color:white">@item.Agency</td>

                            <td style="background-color:white"><a href="~/Files/DownloadFile?filePath=@item.Path" class="btn btn-sm btn-primary" role="button"><i class="fa fa-download"></i> Download</a></td>






                        </tr>

                        <tr class="expandable-body">
                       
                            <td colspan="5" style="background-color: rgb(255, 255, 255, 0.88);">
                                <medium>
                                    <div class="col d-flex justify-content-center">
                                        <div class="col-md-5 col-sm-5 col-12">
                                            <div class="card mb- mb-xl-0" style="border-radius: 14px;">

                                                <div class="card-outline card-primary card-body text-left" style="border-radius: 14px;">

                                                    <div><b>File Description</b></div>
                                                    <div class="divider"></div>

                                                    <div style="font-style:italic">
                                                        @item.Description
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </medium>



                            </td>

                        </tr>


                    </tbody>
                        }
                        </table>

                    </div>
                    





                </div>
                <div class="small-box bg-gradient-gray-dark">





                </div>








                @Html.ActionLink("New Upload", "Upload", "Files", null, new { @class = "btn btn-primary btn-sm" })||

@Html.ActionLink("Home-page", "Index", "Home", null, new { @class = "btn btn-success btn-sm" })
            <hr class='dotted' />

        </div>
</div>