@using PagedList
@using PagedList.Mvc;
@model IPagedList<IShop.Core.ReportGroup>
@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.61);">


    <div class="card-header" style="background-color: #0656A5">
        <h3 class="card-title" style="color:white">
            <i class="fa fa-university"></i>
            Reports
        </h3>





    </div>
    <div class="card-body">





        @if (TempData["Msg"] != null)
        {<div class="row">
                <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @TempData["Msg"]
                </div>
            </div>
        }

        <script>
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 2000);
        </script>






        <div class="row">
            @foreach (var item in Model)
            {



                <div class="card-body">
                    <div class="row">
                        <div class="card" style="width:25rem; border-radius: 14px;">
                            <div class="card-header" style="background-color: #0656A5; color: white; border-radius: 14px; "><i class="fa fa-chart-line"></i> @item.Description   <span class="badge badge-warning"><medium><i class="fa fa-server"></i> @item.Menu_order</medium></span></div>

                            <div class="card-body">
                                <a><span class="badge badge-secondary"><medium><i class="fa fa-chart-line text-white"></i></medium></span> Group Type : @item.Type  </a>

                                <div class="dropdown-divider"></div>
                                <h6>     <i class="fa  fa-chart-pie text-primary"></i> <a href="@Url.Action("Details", "ReportGroup", new { id = item.id} )">View Reports </a></h6>
                            </div>

                        </div>

                    </div>
                </div>
            }
