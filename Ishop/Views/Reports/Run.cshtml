@using ReportViewerForMvc

@{
    ViewBag.Title = "Report";
}

@if (ViewBag.ReportViewer != null)
{

    <style>
        {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        iframe {
            /*for the report viewer*/
            border: none;
            padding: 0;
            margin: 0;
            width: 100%;
            height: 100%;
        }

        report {
            border: 0px solid black;
            padding: 0px;
            margin: 0px;
            height: 100%;
        }

        #rptvwrMainViewer_ReportToolbar_NavGr_CurrentPage_TotalPages {
            width: 100px;
        }

        html#html, body#body, form#form1, div#content, center#center {
            border: 0px solid black;
            padding: 0px;
            margin: 0px;
            height: 100%;
        }
    </style>



    <div class="card-header" style="background-color:midnightblue">
        <h3 class="card-title" style="color:white">
            <i class="fa fa-chart-bar"></i>
            Report
        </h3>
    </div>
    <table style="vertical-align: bottom; border-width: 0px; margin-top: 0px;
   margin-bottom: 0px; width: 100%; height: 100%; padding: 0px,0px,0px,0px;"
           cellspacing="0" cellpadding="0">

        <tr>
            <td>
                <div style="border-top: black 1px solid; background-color: #ffffff; border-bottom-width: 1px; border-bottom-color: #ffffff; padding-bottom: 10px; ">

                </div>
            </td>
        </tr>
        <tr>
            <td style="height: 100%;">
                @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)

            </td>
        </tr>
    </table>
}