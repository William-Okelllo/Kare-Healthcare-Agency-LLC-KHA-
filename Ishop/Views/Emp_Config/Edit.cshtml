@model Ishop.Models.Employees_Config

@{
    ViewBag.Title = "Edit";
}


<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-7 col-sm-7 col-7">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #001F3F;color:white">
                <i class="fa fa-id-card text-white nav-icon"></i> Employees Config -Update
            </div>
            <div class="card-body">


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
                <div class="form-row">


                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>
                                <i class="fa fa-calendar text-danger"></i> @Html.LabelFor(model => model.Total_leaves_per_year)
                            </label>
                            @Html.EditorFor(model => model.Total_leaves_per_year, new
                 {
                     htmlAttributes = new
                     {
                         @class = "form-control ",
                         @placeholder = "Total_leaves_per_year",

                              }
                 })


                        </div>
                        <div class="form-group col-md-4">
                            <label>
                                <i class="fa fa-calendar text-success"></i>  @Html.LabelFor(model => model.Leave_pre_days)
                            </label>
                            @Html.EditorFor(model => model.Leave_pre_days, new
                 {
                     htmlAttributes = new
                     {
                         @class = "form-control ",
                         @placeholder = "Leave_pre_days",

                              }
                 })


                        </div>



                        <div class="form-group col-md-4">
                            <label>
                                <i class="fa fa-calendar"></i> @Html.LabelFor(model => model.Advance_pay_limit)
                            </label>
                            @Html.EditorFor(model => model.Advance_pay_limit, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control",
                               @placeholder = "Advance_pay_limit",
                           }
                       })
                        </div>

                    </div>


                    <hr />

                    <table>
                        <thead>
                            <tr>

                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        <td style="text-align:left">

                            <input type="submit" value="Update Configs" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure you want to update he configs?')" />


                            <script>
                                $(function () {
                                    $('#Create').click(function () {
                                        if (confirm('Are you sure?')) {
                                            window.location.href = $(this).data('url');
                                        }
                                    });
                                });
                            </script>
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn" })
                            <input type="reset" value="Reset" class="btn btn-danger" style="color:white" />



                        </td>
                        </tbody>
                    </table>
                </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
