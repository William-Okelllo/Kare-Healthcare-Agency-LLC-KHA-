@model PagedList.IPagedList<IShop.Core.Holiday>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Holiday Time Sync";
}

<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }
</style>

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded3 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 14%;
        border-color: white;
    }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
        $("#datepicker2").datepicker();
    });

</script>
<div class="card " style="background-color: rgb(255, 255, 255, 0.61);">


    <div class="card-header col-md-12 col-sm-12 col-12 " style="background-color: #0C54A0; color: white; ">
        <h3 class="card-title" style="color:white;text-align:center">
            <i class="fa fa-universal-access"></i>
            Holiday Time Sync
        </h3>


        <div style="text-align: right; color: white ">





            @using (Html.BeginForm("Index", "holidays", FormMethod.Get))
            {
                
                <a style="font-family: Calibri"> <span class="badge badge-warning"> <i class="fa fa-user-circle text-black"></i>  Staff</span>  </a>
                <select class="form-rounded2" name="option" id="userName">
                    <option value="">Select User</option>
                    
                </select>

                <button type="submit" value="search" class="btn btn-sm btn-warning">
                    <i class="fas fa-search"></i>
                </button>
            }





        </div>

    </div>

    @if (TempData["Msg"] != null)
    {<div class="row">
            <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Msg"]
            </div>
        </div>
    }

    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);
    </script>







    <div class="table-responsive">
        <table class="table table-bordered table-hover text-nowrap  table-condensed table-striped table-hover sortable curved-table">


            <thead>
                <tr style="color:white">

                    <th style="background-color: #0C54A0; font-size: medium; "> Holiday</th>
                    <th style="background-color: #0C54A0; font-size: medium; "> Date</th>
                    <th style="background-color: #0C54A0; font-size: medium; ">Assigned Hrs</th>
                    <th style="background-color: #0C54A0; font-size: medium; ">Activated</th>
                    <th style="background-color: #0C54A0; font-size: medium; ">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td style="background-color: white;">
                            <i class="fa fa-bookmark text-warning"></i>  <b>@item.Holiday_Name</b>
                        </td>
                        <td style="background-color: white;">
                            <small style="color:navy">
                                <span class="badge badge-warning"> <i class="fa fa-unsiversity text-black"></i></span>  <b>@item.Holiday_date.ToString("dd-MMMM-yyyy")</b>
                            </small>
                        </td>
                        <td style="background-color: white;">
                            <small style="font-size:large"><b>@item.Hours_Assigned</b> <b style="font-size:small;color:orange">Hrs</b></small>
                        </td>
                        <td style="background-color: white;">
                            @if (item.Activated == true)
                            {<small> <i class="fa fa-check-circle"></i> Hours Assigned</small>}
                            else
                            { <small> <i class="fa fa-pause-circle"></i> Pending Activation</small>}
                        </td>
                        <td style="background-color:ghostwhite">
                            <div class="btn-group dropdown">
                                <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-hashtag"></i>  . Action
                                </button>
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">

                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Edit", "Indirect_Activities", new { id = item.Id })" class="dropdown-item">
                                        <i class="fa fa-pen-nib text-primary"></i> Edit/Update 
                                    </a>

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" onclick="if (confirm('Are you sure you want to delete this holiday ')) { window.location.href = '@Url.Action("Delete", "indirect_Activities", new { id = item.Id, })'; }">
                                        <i class="fa fa-times-circle text-danger"></i> Drop Holiday
                                    </a>
                                    <script>
                                        $(function () {
                                            $('#Deny').click(function () {
                                                if (confirm('Are you sure?')) {
                                                    window.location.href = $(this).data('url');
                                                }
                                            });
                                        });
                                    </script>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <!-- Modal to display the result -->




        <style>
            .ul.pagination {
                display: inline-block;
                padding: 1;
                margin: 1;
                border-radius: 0.5rem;
            }

            ul.pagination li {
                display: inline;
            }

                ul.pagination li a {
                    color: black;
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color;
                    background-color: #ddd;
                    border-color: white;
                    border-radius: 0.5rem;
                }

                    ul.pagination li a.active {
                        background-color: dodgerblue;
                        color: white;
                    }

                    ul.pagination li a:hover:not(.active) {
                        background-color: dodgerblue;
                        border-radius: 0.5rem;
                    }
        </style>
        <div id="container" style="text-align:left">

            <div class="pagination" style="text-align:left">
                @Html.PagedListPager(Model, page => Url.Action("All", new { page, userName = ViewBag.UserName, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })
              , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = true })
            </div>
        </div>
    </div>

    @if (Model.Count() == 0)
    {
        <div class="col d-flex justify-content-center">

            <div class="col-md-3 col-sm-12 col-12">
                <div class="info-box bg-gradient-black">

                    <div class="info-box-content">

                        <div class="progress">
                            <div class="progress-bar" style="width: 0%"></div>
                        </div>
                        <span class="progress-description">
                            <i class="fa fa-spin fa-circle-notch text-danger nav-icon"></i>  No data found
                        </span>

                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
        </div>


    }

</div>

</div>




