@model List<IShop.Core.Indirect_Activities>
@{
    ViewBag.Title = "InDirecttasks";
}
<style>
</style>
<div class="table-responsive">
    <table class="table table-bordered table-hover  curved-table text-nowrap">
        <thead>
            <tr style="color:white">

                <th style="background-color: #0656A5">Staff</th>
                <th style="background-color: #0656A5">Activity Name</th>

                <th style="background-color: #0656A5">Hours</th>
                <th style="background-color: #0656A5">Comments</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-widget="expandable-table" aria-expanded="false">

                    <td style="background-color: white;"><span class="badge badge-primary"><medium><i class="fa fa-calendar text-white"></i></medium></span>  @item.Day_Date.ToString("dd-MMM-yyyy")</td>
                    <td style="background-color: white;">@item.Name</td>
                    <td style="background-color: white;"> <span class="badge badge-primary"><medium><i class="fa fa-clock text-white"></i></medium></span> <b>@item.Hours</b> <small>Hrs</small></td>
                    <td style="background-color: white;" colspan="6">
                        <p>@item.Comments</p>

                        <div class="divider"></div>
                        @if (@item.Approved == true)
                        {<p style="color:green;text-align:right"> <span class="badge badge-primary"><medium><i class="fa fa-user-circle text-white"></i></medium></span>  @item.User   |<span class="badge badge-dark"><medium><i class="fa fa-calendar text-white"></i>WeekNo</medium></span>  @item.WeekNo  |   <i class="fa fa-check-circle"></i>  <b>APPROVED</b>  </p>}
                    else
                    {<p style="color: orange; text-align: right"><span class="badge badge-primary"><medium><i class="fa fa-user-circle text-white"></i></medium></span>  @item.User |<span class="badge badge-dark"><medium><i class="fa fa-calendar text-white"></i>WeekNo</medium></span>  @item.WeekNo |  <i class="fa fa-spin fa-circle-notch"></i>  <b>PENDING</b> </p>}
                    </td>

                </tr>



            }
        </tbody>
    </table>
</div>
    <div class="dropdown-divider"></div>
    <div style="text-align:center">
        <a href="@Url.Action("Approvals", "Phase", new { id = ViewBag.weeNo,user=ViewBag.user })" class="btn btn btn-primary btn" onclick="return confirm('Are you sure you want to approve staff timesheet?')"><i class="fa fa-check-circle text-black"></i> Approve Week Timesheet</a>
    </div>
