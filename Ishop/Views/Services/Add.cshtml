@model IShop.Core.Service

@{
    ViewBag.Title = "Create";
}

<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }

    .form-rounded {
        border-radius: 1rem;
    }

    form-rounded2 {
        border-radius: 4rem;
        border-color: orangered;
    }

    .form-rounded1 {
        border-radius: 1rem;
        border-color: red;
    }

    .form-control:focus {
        border-color: #0faa09;
    }
</style>


<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }



    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    hr {
        border: none;
        color: black;
        background-color: greenyellow;
        height: 1px;
        width: 100%;
    }
</style>



@if (TempData["Msg"] != null)
{<div class="row">
        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Msg"]
        </div>
    </div>
}

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>
<!-- /.card-header -->






<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-9 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #803209; color: white; border-radius: 14px ">
                <i class="fa fa-spinner"></i> New Make
            </div>
            <div class="card-body" style="background-color: white;border-radius: 24px;">
                <div class="card-body" style="background-color: #ffffffc1;border-radius: 24px;">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })






                        <div class="form-row">
                            @foreach (var item2 in ViewBag.CheckIn)
                            {<div class="form-group col-md-2 ">
                                    <label><i class="fa fa-bookmark text-orange"></i> @Html.LabelFor(model => model.Booking_Id)</label>
                                    <input id="Booking_Id" name="Booking_Id" type="number" value="@item2.Id" class="form-control  form-control  " readonly />

                                </div>
                            }



                            <div class="form-group col-md-3" id="other">
                                <label><i class="fa fa-hands-wash text-orange"></i>   @Html.LabelFor(model => model.Service_Name)</label>
                                @Html.EditorFor(model => model.Service_Name, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control ",
                                   @Placeholder = "Service Name",
                                   @required = true,
                               }
                           })
                            </div>


                        </div>
                        <div class="row">
                            <div class="form-group col-md-3" id="other">
                                <label><i class="fa fa-wallet text-orange"></i>   @Html.LabelFor(model => model.Amount)</label>
                                @Html.EditorFor(model => model.Amount, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control ",
                                   @Placeholder = "Amount",
                                   @required = true,
                               }
                           })
                            </div>
                            <div class="form-group col-md-2" id="other">
                                <label><i class="fa fa-spinner text-orange"></i>   @Html.LabelFor(model => model.VAT)</label>
                                @{
                                    List<SelectListItem> v = new List<SelectListItem>();
                                    v.Add(new SelectListItem
                                    {
                                        Text = "ADD VAT",
                                        Value = "True",
                                    });
                                    v.Add(new SelectListItem
                                    {
                                        Text = "NO VAT",
                                        Value = "False",
                                    });



                                }@Html.DropDownListFor(model => model.VAT, v, "VAT", new { @class = "form-control form-control", @required = "required", })
                            </div>
                            <script>
                                $(document).ready(function () {
                                    // Get references to the dropdown and textboxes
                                    var dropdown = $('#VAT');
                                    var textBoxB = $('#Amount');
                                    var textBoxC = $('#Total_Amount');

                                    // Event handler for when the dropdown value changes
                                    dropdown.on('change', function () {
                                        // Get the selected value from the dropdown
                                        var selectedValue = dropdown.val();

                                        // Check if the selected value is "true"
                                        if (selectedValue === "True") {
                                            // Perform the calculation and set the result in TextBox C
                                            var inputValue = parseFloat(textBoxB.val());

                                            var result = inputValue + (inputValue * 0.16); // Multiply by 16%
                                            textBoxC.val(result.toFixed(2)); // Set the result in TextBox C with 2 decimal places
                                        } else if (selectedValue === "False") {
                                            var result2 = parseFloat(textBoxB.val());
                                            textBoxC.val(result2.toFixed(2));
                                        }
                                    });
                                });
                            </script>
                            <div class="form-group col-md-3" id="other">
                                <label><i class="fa fa-circle-notch text-orange"></i>   @Html.LabelFor(model => model.Total_Amount)</label>
                                @Html.EditorFor(model => model.Total_Amount, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control ",
                                   @Placeholder = "Amount",
                                   @Readonly = true,
                               }
                           })
                            </div>
                        </div>


                        <div class="dropdown-divider"></div>
                        <input type="submit" value="Add Service" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure you want add this?')" />


                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>

                        @Html.ActionLink("Back to List", "create", "JobsCards", null, new { @class = "btn btn-primary btn" })





                    }

                    </form>





















                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }



                </div>
            </div>
        </div>
    </div>
</div>
