@model IShop.Core.Perform

@{
    ViewBag.Title = "Performance";
}


<style>
    .form-rounded2 {
        border-radius: 1rem;
    }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
        $("#datepicker2").datepicker();
    });

</script>
<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-10 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">

            <div class="card-body" style="background-color: white;border-radius: 24px;">
                <h4 style="color:purple"><i class="fa fa-bookmark"></i> Performance Report </h4>
                <div class="dropdown-divider"></div>
                @using (Html.BeginForm("Report", "Performs", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>



                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label style="color:black"><i class="fa fa-calendar-day text-purple"></i> Date</label>
                        @Html.EditorFor(model => model.Date, new
                   {
                       htmlAttributes = new
                       {
                           @class = "form-control form-control-sm ",
                           @placeholder = "Select Date",
                           id = "datepicker",

                           @required = "required",
                       }
                   })
                    </div>
                    @if (ViewBag.Option == 1)
                    {<div class="form-group col-md-4">
                            <label><i class="fa fa-users text-purple"></i>  Select Student </label>
                            @Html.DropDownList("Student", ViewBag.Admm as SelectList, "--Select Student --", new { @class = "form-control form-control-sm", id = "StudentStudent" })
                        </div>
                    }
                    else
                    {
                        <div class="form-group col-md-2" id="other">
                            <label>Overall Report</label>
                            @Html.EditorFor(model => model.Student, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm",
                               @Value = "Overall",
                               @Readonly = true,

                           }
                       })
                        </div>
                    }

                    <script type="text/javascript">
                        $(function () {

                            $("#StudentStudent").chosen();
                            $("#Stage").chosen();

                        });
                    </script>

                    <div class="form-group col-md-2" id="other" style="display:nosne">
                        <label><i class="fa fa-bookmark text-purple"></i>  Stage</label>
                        @{
                            List<SelectListItem> b = new List<SelectListItem>();
                            b.Add(new SelectListItem
                            {
                                Text = "Intermediate",
                                Value = "Intermediate",
                            });
                            b.Add(new SelectListItem
                            {
                                Text = "CAT",
                                Value = "CAT",
                            });
                            b.Add(new SelectListItem
                            {
                                Text = "Final exams",
                                Value = "Final exams",
                            });


                        }@Html.DropDownListFor(model => model.Stage, b, "---Select Stage---", new { @class = "form-control form-control-sm", @required = "required", })
                    </div>
                    <div class="form-group col-md-4" id="other" style="display:nosne">
                        <label><i class="fa fa-bookmark text-purple"></i>  Subjects</label>
                        @{
                            List<SelectListItem> v = new List<SelectListItem>();
                            v.Add(new SelectListItem
                            {
                                Text = "Basic Nursing Skills",
                                Value = "Basic Nursing Skills",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Anatomy and Physiology",
                                Value = "Anatomy and Physiology",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Patient Care and Comfort",
                                Value = "Patient Care and Comfort",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Medical Terminology",
                                Value = "Medical Terminology",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Infection Control",
                                Value = "Infection Control",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Safety and Emergency Procedures",
                                Value = "Safety and Emergency Procedures",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Communication Skills",
                                Value = "Communication Skills",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Mental Health and Social Services Needs",
                                Value = "Mental Health and Social Services Needs",
                            });
                            v.Add(new SelectListItem
                            {
                                Text = "Basic Restorative Services",
                                Value = "Basic Restorative Services",
                            });

                        }@Html.DropDownListFor(model => model.Subjects, v, "---Select Subjects---", new { @class = "form-control form-control-sm", @required = "required", })
                    </div>
                    <script type="text/javascript">
                        $(function () {

                            $("#Gender").chosen();
                            $("#Subjects").chosen();
                            $("#Activities").chosen();

                        });
                    </script>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2" id="other">
                        <label><i class="fa fa-percentage text-purple"></i> Percentage</label>
                        @Html.EditorFor(model => model.Percentage, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control form-control-sm",
                                @placeholder = "0%",
                                @Required = true,
                                @id = "percentage"
                            }
                        })
                    </div>

                    <div class="form-group col-md-2" id="other">
                        <label><i class="fa fa-hashtag text-purple"></i> Grade</label>
                        @Html.EditorFor(model => model.Grade, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control form-control-sm",
                                @placeholder = "GRADE",
                                @Readonly = true,
                                @id = "grade"
                            }
                        })
                    </div>

                    <script>
                        document.getElementById("percentage").addEventListener("input", function () {
                            var percentage = parseFloat(this.value);

                            // Ensure percentage is between 0 and 100
                            if (percentage > 100) {
                                percentage = 100;
                                this.value = 100;
                            } else if (percentage < 0) {
                                percentage = 0;
                                this.value = 0;
                            }

                            // Determine grade based on percentage
                            var grade = "";
                            if (percentage >= 90 && percentage <= 100) {
                                grade = "A";
                            } else if (percentage >= 80 && percentage < 90) {
                                grade = "B";
                            } else if (percentage >= 70 && percentage < 80) {
                                grade = "C";
                            } else if (percentage >= 60 && percentage < 70) {
                                grade = "D";
                            } else if (percentage >= 0 && percentage < 60) {
                                grade = "E";
                            }

                            // Set the grade in the grade input field
                            document.getElementById("grade").value = grade;
                        });
                    </script>

                </div>
                    <div class="dropdown-divider"></div>
                    <label><i class="fa fa-comment-dots text-primary"></i> @Html.LabelFor(model => model.Remarks) </label>
                    <div class="form-row">


                        @Html.TextAreaFor(model => model.Remarks, 4, 70, htmlAttributes: new
    {
     style = "width: 70%; max-width:70%;",
     @placeholder = "Additional information",
     @autofocus = "",
     @class = "form-control form-rounded2",
      // Custom attribute for conditional validation
    })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                    <div class="dropdown-divider"></div>

                    <div class="col d-flex justify-content-center">
                        <input type="submit" name="action" value="Submit Report" class="btn btn btn-success" style="color:white" onclick="return confirm('Proceed on report submission?')" />
                        <b>|</b>

                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>

                        @Html.ActionLink("Back to List", "Option", null, new { @class = "btn btn-primary btn" })
                    </div>
            </form>
            }
            </div>
        </div>
    </div>
</div>
</div>
