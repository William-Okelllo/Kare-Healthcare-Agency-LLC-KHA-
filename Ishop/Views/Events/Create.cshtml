@model IShop.Core.Events

@{
    ViewBag.Title = "New Events";
}


<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }

    .form-rounded {
        border-radius: 1rem;
    }

    form-rounded2 {
        border-radius: 4rem;
        border-color: orangered;
    }

    .form-rounded1 {
        border-radius: 1rem;
        border-color: red;
    }

    .form-control:focus {
        border-color: #0faa09;
    }
</style>


<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }



    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    hr {
        border: none;
        color: black;
        background-color: greenyellow;
        height: 1px;
        width: 100%;
    }
</style>



@if (TempData["Msg"] != null)
{<div class="row">
        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Msg"]
        </div>
    </div>
}

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>
<!-- /.card-header -->

<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
    $(function () {
        $("#datepicker2").datepicker();
    });
    $(function () {
        $("#datepicker9").datepicker();
    });
</script>




<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-9 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #071052; color: white; border-radius: 14px ">
                <i class="fa fa-umbrella-beach fa-spinner"></i> Add Events
            </div>
            <div class="card-body" style="background-color: white;border-radius: 24px;">
                <div class="card-body" style="background-color: #ffffffc1;border-radius: 24px;">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })






                    <div class="form-row">

                        <div class="col-9 col-md-4">
                            <label> <i class="fa fa-calendar-check text-orange"></i>      @Html.LabelFor(model => model.Event_date)</label>
                            @Html.EditorFor(model => model.Event_date, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm",
                               @Placeholder = "Event Date",
                               id = "datepicker9",
                               @Required = "true",
                           }
                       })
                        </div>
                        <div class="col-9 col-md-5">
                            <label> <i class="fa fa-umbrella text-orange"></i>      @Html.LabelFor(model => model.Name)</label>
                            @Html.EditorFor(model => model.Name, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm",
                               @Placeholder = "example : Charles Birthday Party",
                               id = "Phone",
                               @Required = "true",
                           }
                       })

                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="form-row">
                        <div class="col-9 col-md-4">
                            <label> <i class="fa fa-map-marker text-orange"></i>      @Html.LabelFor(model => model.Venue)</label>
                            @Html.EditorFor(model => model.Venue, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm",
                               @Placeholder = "Nairobi Palace",
                               id = "Phone",
                               @Required = "true",
                           }
                       })

                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $("#Type").chosen();
                                
                            });
                        </script>
                        <div class="form-group col-md-4">
                            <label><i class="fa fa-bookmark text-orange"></i> @Html.LabelFor(model => model.Type) </label>
                            @{
                                List<SelectListItem> m = new List<SelectListItem>();
                                m.Add(new SelectListItem
                                {
                                    Text = "Birthday Event",
                                    Value = "Birthday Event",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Wedding Event",
                                    Value = "Wedding Event",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Family Gathering",
                                    Value = "Family Gathering",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Conference Event",
                                    Value = "Conference Event",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Festival Event",
                                    Value = "Festival Event",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Exhibition Event",
                                    Value = "Exhibition Event",
                                });
                                m.Add(new SelectListItem
                                {
                                    Text = "Workshop ",
                                    Value = "Workshop ",
                                });
                            }@Html.DropDownListFor(model => model.Type, m, "---Event Type---", new { @class = "form-control form-control-sm", @required = "required", })
                        </div>
                        <div class="col-9 col-md-2" style="display:s">
                            <label> <i class="fa fa-tag text-orange"></i>      @Html.LabelFor(model => model.staff)</label>
                            @Html.EditorFor(model => model.staff, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm",
                               @Placeholder = "Event_Id",
                               @Value = User.Identity.Name,
                               @Readonly = true,
                           }
                       })
                        </div>
                    </div>

                        <small>Action</small>
                        <div class="dropdown-divider"></div>



                        <input type="submit" value="Post Event" class="btn btn btn-success" style="color:white" onclick="return confirm('Are you sure?')" />


                        <script>
                            $(function () {
                                $('#Create').click(function () {
                                    if (confirm('Are you sure?')) {
                                        window.location.href = $(this).data('url');
                                    }
                                });
                            });
                        </script>
                        <small>||</small>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn" })




                        }
                    </div>
            </div>
        </div>
    </div>
</div>




















@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



                </div>
            </div>
        </div>
    </div>
</div>
