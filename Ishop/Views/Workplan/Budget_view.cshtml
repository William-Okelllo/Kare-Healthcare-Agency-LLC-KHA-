                                                    <a href="@Url.Action("Delete", "direct_cost", new { Id = item.Id})" class="dropdown-item">
                                                        <i class="fa fa-question-circle text-success"></i> Drop Cost
                                                    </a>


                                                </div>
                                            </div>


                                        </td>
                                    </tr>

                                }
                                <tr>
