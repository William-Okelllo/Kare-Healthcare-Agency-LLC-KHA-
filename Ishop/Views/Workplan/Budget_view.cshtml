                                    <th style="background-color: #a7a7a7; font-size: medium; ">Action</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in ViewBag.DirectCost)
                                {
                                    <tr>


                                        <td style="background-color: white; width: 70%">
                                            @{
                                                string message2 = item.Description.Replace("\n", "<br>");
