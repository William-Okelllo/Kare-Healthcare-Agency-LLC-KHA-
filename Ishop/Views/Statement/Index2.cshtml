
<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }
</style>

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.74);">


    <div class="card-header col-md-8 col-sm-10 col-10 col d-flex justify-content-center" style="background-color: #0d4d28; color: white; border-radius: 14px ">
        <h3 class="card-title" style="color:white;text-align:center">
            <i class="fa fa-calendar-day"></i>
            Income Statements  -@DateTime.Now.Year
        </h3>
    </div>
    <div class="card-body">
        <p>
            <div class="spinner-grow spinner-grow-sm text-success" role="status">
                <span class="sr-only">Loading...</span>
            </div> Select the month to auto generate Income statement
        </p>


        <div class="row">
            @foreach (var item in ViewBag.A10)
            {

                <div class="col-md-2 col-sm-6 col-6">
                    <div class="info-box" style="border-radius: 16px; background-color: #0d4d28">


                        <div class="info-box-content" style="color:white">
                            <span class="info-box-text text-wrap"><p> <i class="fa fa-calendar-check"></i> @item.Month -<small> @item.Id-@DateTime.Now.Year</small></p></span>

                            <button type="button" class="btn btn-xs btn-default " onclick="location.href='@Url.Action("Inc_Statement", "Statement",new { M = item.Month })'">View</button>


                            <!-- /.info-box-content -->
                        </div>
                    </div><!-- /.info-box -->
                </div>

            }
        </div>

    </div>
    <hr />
</div>