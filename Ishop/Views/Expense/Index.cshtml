@using PagedList
@using PagedList.Mvc;
@model IPagedList<IShop.Core.Expense>

@{
    ViewBag.Title = "Expense";
}


<style type="text/css">
    .loading {
        font-size: 10pt;
        width: 200px;
        height: 100px;
        display: none;
        position: fixed;
        z-index: 999;
    }
</style>

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }

    .form-rounded2 {
        border-radius: 0.5rem;
        width: 20%;
        border-color: white;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.61);">


    <div class="card-header" style="background-color: #4a0606ff">
        <h3 class="card-title" style="color:white">
            <i class="fa fa-thin fa-history"></i>
            Expenses Section
        </h3>


        <div style="text-align: center; color: white ">
            Month


            @foreach (var item in ViewBag.l)
            {
                @item.M
            }

            Total Expense


            @foreach (var item in ViewBag.l)
            {
                @item.Expenses
            }
        </div>
     

    </div>






        @if (TempData["Msg"] != null)
        {<div class="row">
                <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @TempData["Msg"]
                </div>
            </div>
        }

        <script>
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 2000);
        </script>



        <div>









            <div class="table-responsive" style="min-height: 400px">
                <table class="table table-bordered table-hover  ">


                    <thead>
                        <tr style="color:white">
                            <th style="background-color: #4a0606ff; "> Post On</th>
                            <th style="background-color: #4a0606ff; "> Notes</th>
                            <th style="background-color: #4a0606ff; ">Amount </th>
                            <th style="background-color: #4a0606ff; ">Status </th>
                            <th style="background-color: #4a0606ff; ">Action </th>



                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr data-widget="expandable-table" aria-expanded="false">

                            <td style="background-color:white">
                                <small> <i class="fa fa-calendar text-green"></i> @item.CreatedOn.ToString("dd-MMMM-yyyy")</small>
                            </td>
                            <td style="background-color:white"> @item.Additional_Notes</td>
                            <td style="background-color:white"><i class="fa fa-user-circle text-green"></i> @item.Amount /=</td>
                            <td style="background-color:white">
                                @if (item.Status == "New")
                                {<span class="float-center badge bg-green">Expense Status : @item.Status </span>}
                            else if (item.Status == "Paid")
                            { <span class="float-center badge bg-warning">Expense Status : @item.Status </span>}
                        else
                        { <span class="float-center badge bg-danger">Expense Status : @item.Status </span>}
                            </td>


                            <td style="background-color:ghostwhite">
                                <div class="btn-group dropdown">
                                    <button type="button" class="btn-xs btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-file-invoice"></i>  . Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                        @if (item.Status == "New")
                                        {
                                            <div class="dropdown-divider"></div>
                                            <a href="@Url.Action("Edit", "Expense", new { id = item.Id })" class="dropdown-item">
                                                <i class="fas fa-pen text-success"></i> Edit/Update Expense
                                            </a>
                                        }
                                        @if (item.Status == "New" || item.Status == "Paid")
                                        {
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" onclick="if (confirm('Are you sure you want cancel this Expense?')) { window.location.href = '@Url.Action("Cancelled", "Expense", new { id = item.Id })'; }">
                                                <i class="fas fa-times-circle text-danger"></i> Cancel Expense
                                            </a>
                                            <script>
                                                $(function () {
                                                    $('#Paid').click(function () {
                                                        if (confirm('Are you sure?')) {
                                                            window.location.href = $(this).data('url');
                                                        }
                                                    });
                                                });
                                            </script>
                                            <div class="dropdown-divider"></div>
                                        }

                                    </div>

                                </div>






                            </td>











                        </tr>


                        }
                    </tbody>
                </table>
                @if (Model.Count() == 0)
                {
                    <div style="text-align:center">
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="info-box bg-gradient-black">
                                <span class="info-box-icon"><i class="far fa-bed"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text"> <img src="~/Images/logo77.png" height="50" /> </span>


                                    <div class="progress">
                                        <div class="progress-bar" style="width: 0%"></div>
                                    </div>
                                    <span class="progress-description">
                                        <i class="fa fa-calendar text-white nav-icon"></i>   No Data Found
                                    </span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                        </div>
                    </div>
                }
                <div class="small-box bg-gradient-gray-dark">
                    <div>
                        <h5 style="font-family:Quicksand">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["SearchBy"], search = Request.QueryString["Search"] })
                        , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = true })
                        </h5>
                    </div>




                </div>


            </div>




            @Html.ActionLink("Home-page", "Index", "Home", null, new { @class = "btn btn-success btn-sm" })
            <hr class='dotted' />
        </div>
    </div>

