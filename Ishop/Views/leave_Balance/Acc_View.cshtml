@model IShop.Core.Collection

@{
    ViewBag.Title = "Collect";
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
        $("#datepicker2").datepicker();
    });

</script>
<style>
    .curved-table {
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

        .curved-table th,
        .curved-table td {
            padding: 10px;
            border: 1px solid #d3d3d3;
        }
</style>
<div class="col d-flex justify-content-center">
    <div class="col-md-12 col-sm-12 col-12">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #0656A5; color: white">
                <i class="fa fa-chart-line text-white nav-icon"></i> Leave Balance Monitor
            </div>
            <div class="card-body">

                @if (TempData["Msg"] != null)
                {<div class="row">
                        <div class="alert alert-warning col-md-6 col-md-offset-4" align="center">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Msg"]
                        </div>
                    </div>
                }

                <script>
                    window.setTimeout(function () {
                        $(".alert").fadeTo(500, 0).slideUp(500, function () {
                            $(this).remove();
                        });
                    }, 2000);
                </script>

                <div class="row">

                    <div class="col-lg-5 col-12">
                        <!-- small card -->
                        <div class="small-box bg-gradient-gray-dark" style="border-radius: 15px;">
                            <div class="inner">

                                <h5 style="color:white"> <span class="badge badge-warning"><medium> <i class="fa fa-user-circle text"></i>  </medium></span><b> @ViewBag.Emp.Fullname </b> </h5>
                                <h7> <span class="badge badge-warning"><medium> <i class="fa fa-envelope text"></i>  </medium></span>  <i>@ViewBag.Emp.Email</i></h7> <br />
                                <h7> <span class="badge badge-warning"><medium> <i class="fa fa-university text"></i>  </medium></span>  @ViewBag.Emp.DprtName</h7>
                            </div>
                            <div class="icon"> <i class="fa fa-user-circle"></i></div>

                        </div>
                    </div>
                </div>



                <div style="text-align:right">
                    <a class="btn-sm btn btn-warning btn" onclick="if (confirm('Are you sure you want to re-call the  leaves tracker? ')) { window.location.href = '@Url.Action("Insert_days", "leave_Balance", new { Username = ViewBag.Emp.Username })'; }" ><i class="fa fa-arrow-circle-up "></i> Pull New Data</a>
                    <b>|</b>
                    <a class="btn-sm btn btn-outline-danger btn" onclick="if (confirm('Are you sure you want to clean out the  leaves tracker? ')) { window.location.href = '@Url.Action("Purge", "leave_Balance", new { Username = ViewBag.Emp.Username })'; }"><i class="fa fa-circle-notch "></i> Clean Up Tracker</a>
                </div>
                <div class="dropdown-divider"></div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-nowrap  table-condensed table-striped table-hover sortable curved-table">


                        <thead style="font-family:Calibri">
                            <tr style="color:white">
                                <th style="background-color: #0656A5; "><i class="fa fa-bookmark"></i>  Leave Type </th>
                                <th style="background-color: #0656A5; "><i class="fa fa-calendar-day"></i>  Requested </th>
                                <th style="background-color: #0656A5; "><i class="fa fa-chart-line"></i>  Balance </th>
                                <th style="background-color: #0656A5; "><i class="fa fa-chart-line"></i>  Total leaves in Yr </th>
                            </tr>
                        </thead>

                        <tbody style="font-family:Calibri">
                            @foreach (var item2 in ViewBag.Account)
                            {
                                <tr data-widget="expandable-table" aria-expanded="false">
                                    <td style="background-color:white"> <span class="badge bg-warning"> <i class="fa fa-usere"></i></span> <b> @item2.Type</b> </td>
                                    <td style="background-color:white"> <i class="fa fa-check-circle text-primary"></i>  @item2.Requested_leaves  <small><b>Days</b></small></td>
                                    <td style="background-color:white"> <i class="fa fa-circle-notch text-success"></i>  @item2.Remaining_leaves  <small><b>Days</b></small></td>
                                    <td style="background-color:white"> <i class="fa fa-arrow-alt-circle-up text-warning"></i>  @item2.Total_leaves_per_year  <small><b>Days</b></small></td>
                                    
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <div class="dropdown-divider"></div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn" })
            </div>
        </div>
    </div>
</div>
</div>