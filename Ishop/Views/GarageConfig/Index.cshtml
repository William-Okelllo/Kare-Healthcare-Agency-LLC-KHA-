@model IEnumerable<IShop.Core.Garage>

@{
    ViewBag.Title = "Index";
}

@if (TempData["Msg"] != null)
{<div class="row">
        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Msg"]
        </div>
    </div>
}

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 2000);
</script>

@foreach (var item in Model)
{
    <br />
    <br />
    <br />
    <br />


    <div class="col d-flex justify-content-center">
        <div class="col-md-7" style="border-radius: 14px;">
            <!-- Widget: user widget style 2 -->
            <div class="card card-widget widget-user-2" style="border-radius: 14px;">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                @if (TempData["Msg"] != null)
                {<div class="row">
                        <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Msg"]
                        </div>
                    </div>
                }

                <script>
                    window.setTimeout(function () {
                        $(".alert").fadeTo(900, 0).slideUp(900, function () {
                            $(this).remove();
                        });
                    }, 2000);
                </script>


                <div class="card-outline card-primary card-body text-left" style="border-radius: 14px;">

                    <div>
                        <i class="fa fa-key text-orange"></i>  Garage Name <span class="badge badge-warning ">  @item.Name </span>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div>
                        <i class="fa fa-link text-orange"></i>  Location: <span class="badge badge-warning ">  @item.location </span>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div>
                        <i class="fa fa-users-cog text-orange"></i>  Email Address: <span class="badge badge-warning ">  @item.Email </span> ||  <i class="fa fa-mobile text-orange"></i>  Phone Number <span class="badge badge-warning ">  @item.Phone </span>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div>
                        <i class="fa fa-percentage text-orange"></i>  VAT: <span class="badge badge-warning ">  @item.VAT </span> ||  <i class="fa fa-percentage text-orange"></i>  Mark-UP: <span class="badge badge-warning ">  @item.Mark_Up </span>
                    </div> 



                    <div class="divider"></div>
                </div>
                <hr />
                <div>
                    @Html.ActionLink("Update Configurations", "Edit", "garageconfig", new { id = item.Id }, new { @class = "btn btn-sm btn-info btn" })
                    ||
                    @Html.ActionLink("Back to Configurations", "Index", "Configuration", null, new { @class = "btn btn-sm btn-warning btn" })
                </div>
            </div>
        </div>
    </div>



}@if (Model.Count() == 0)
{<div class="card" style="background-color: #ffffffd9">
        <br /> <br /> <br />
        <div class="card" style="background-color: #ffffffd9">
            <br />
            <div class="col d-flex justify-content-center">
                <div class="col-md-6" style="border-radius: 14px;">
                    <!-- Widget: user widget style 2 -->
                    <div class="card card-widget widget-user-2" style="border-radius: 14px;">
                        <!-- Add the bg color to the header using any of the bg-* classes -->

                        <div class="col-md-12 col-sm-12 col-12">
                            <div class="info-box bg-gradient-black">
                                <span class="info-box-icon"><i class="far fa-bed"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text"> <img src="~/Images/qw.png" height="50" /> </span>


                                    <div class="progress">
                                        <div class="progress-bar" style="width: 0%"></div>
                                    </div>
                                    <span class="progress-description">
                                        <i class="fa fa-sync text-white nav-icon"></i> SMS Configs Data no set
                                    </span>
                                    @Html.ActionLink("Setup sms Configs", "Create", "sms", null, new { @class = "btn btn-success btn-sm" })
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
