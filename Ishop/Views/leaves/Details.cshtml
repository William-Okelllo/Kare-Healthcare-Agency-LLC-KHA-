<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .curved-table {
        border-collapse: collapse;
        border-radius: 10px;
        overflow: initial;
    }

