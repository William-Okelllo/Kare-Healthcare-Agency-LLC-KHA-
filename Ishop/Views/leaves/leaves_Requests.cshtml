@using PagedList
@using PagedList.Mvc;
@model IPagedList<IShop.Core.leave>

@{
    ViewBag.Title = "leaves";
}



<!-- Main content -->

<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }

    table {
        border-collapse: collapse;
        overflow: visible;
    }
</style>

<div class="card " style="background-color: rgb(255, 255, 255, 0.61);">


    <div class="card-header" style="background-color: #001F3F">
        <h3 class="card-title" style="color:white">
            <i class="fa fa-thin fa-history"></i>
            Requested leaves
        </h3>
    </div>
    @if (TempData["Msg"] != null)
    {<div class="row">
            <div class="alert alert-success col-md-6 col-md-offset-4" align="center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Msg"]
            </div>
        </div>
    }

    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    </script>



    <div>









        <div class="table-responsive" style="min-height: 400px">
            <table class="table table-bordered table-hover  text-nowrap">


                <thead>
                    <tr style="color:white">
                        <th style="background-color: #001F3F; "> Employee Name</th>
                        
                        <th style="background-color: #001F3F; ">Type </th>
                        <th style="background-color: #001F3F; ">Posted On </th>
                        <th style="background-color: #001F3F; ">Requested Leave </th>
                        <th style="background-color: #001F3F; ">Status </th>
                        <th style="background-color: #001F3F; ">Action </th>



                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr data-widget="expandable-table" aria-expanded="false">

                        <td style="background-color:white"><i class="fa fa-user-circle text-green"></i> @item.Employee : <small style="color:blue"> @item.Department</small></td>
                        <td style="background-color:white"><i class="fa fa-circle-notch text-green"></i> @item.Type</td>
                        <td style="background-color:white"><i class="fa fa-calendar-day text-green"></i> <small>@item.CreatedOn.ToString("dd-MMMM-yyyy")</small></td>
                        <td style="background-color:white">
                            <small>
                                <b><i class="fa fa-clock text-success"></i> From</b> @item.From_Date.ToString("dd-MMMM-yyyy") <b><i class="fa fa-clock text-warning"></i> To</b> @item.To_Date.ToString("dd-MMMM-yyyy")
                            </small>
                        </td>
                        <td style="background-color:white">

                            @if (item.Status == "0")
                            {<small style="color:orangered"><i class="fa fa-clock"></i> awating approvals</small>}
                            else if (item.Status == "Approved")
                            {<small style="color:green"><i class="fa fa-check-circle"></i> Approved</small>}
                            else
                            {
                                <small style="color:red"><i class="fa fa-times-circle"></i> Denied</small>
                            }
                        </td>


                        @if (item.Status == "0")
                        {
                            <td style="background-color:ghostwhite">
                                <div class="btn-group dropdown">
                                    <button type="button" class="btn-xs btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-user-circle" s></i>  . Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                        <a class="dropdown-item" onclick="if (confirm('Are you sure you want to approve this request?')) { window.location.href = '@Url.Action("Approve", "leaves", new { id = item.Id })'; }">
                                            <i class="fas fa-handshake text-success"></i> Approve Request
                                        </a>
                                        <script>
                                            $(function () {
                                                $('#Paid').click(function () {
                                                    if (confirm('Are you sure?')) {
                                                        window.location.href = $(this).data('url');
                                                    }
                                                });
                                            });
                                        </script>
                                        <div class="divider"></div>
                                        <a class="dropdown-item" onclick="if (confirm('Are you sure you want to Deny this request?')) { window.location.href = '@Url.Action("Deny", "leaves", new { id = item.Id })'; }">
                                            <i class="fa fa-times-circle text-danger"></i> Deny Request
                                        </a>
                                        <script>
                                            $(function () {
                                                $('#Deny').click(function () {
                                                    if (confirm('Are you sure?')) {
                                                        window.location.href = $(this).data('url');
                                                    }
                                                });
                                            });
                                        </script>
                                    </div>

                                </div>






                            </td>
                        }

                        else
                        {
                            <td style="background-color:white">

                                @if (item.Status == "0")
                                {<small style="color:orangered"><i class="fa fa-clock"></i> awating approvals</small>}
                                else if (item.Status == "Approved")
                                {<small style="color:green"><i class="fa fa-check-circle"></i> Approved</small>}
                                else
                                {
                                    <small style="color:red"><i class="fa fa-times-circle"></i> Denied</small>
                                }



                            </td>

                        }






                    </tr>

                        <tr class="expandable-body">

                            <td colspan="5" style="background-color: rgb(255, 255, 255, 0.88);">
                                <medium>
                                    <div class="col d-flex justify-content-left">
                                        <div class="col-md-11 col-sm-11 col-12">
                                            <div class="card mb- mb-xl-0" style="border-radius: 14px;">

                                                <div class="card-outline card-primary card-body text-left" style="border-radius: 14px;">

                                                    <div><b>leave additional info</b></div>
                                                    <div class="divider"></div>

                                                    <div style="font-style:italic">
                                                        @item.Message
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </medium>



                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count() == 0)
            {
                <div style="text-align:center">
                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="info-box bg-gradient-black">
                            <span class="info-box-icon"><i class="far fa-bed"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text"> <img src="~/Images/co.gif" height="50" /> </span>


                                <div class="progress">
                                    <div class="progress-bar" style="width: 0%"></div>
                                </div>
                                <span class="progress-description">
                                    <i class="fa fa-calendar text-white nav-icon"></i>   No Data found
                                </span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                </div>
            }
            <div class="small-box bg-gradient-gray-dark">
                <div>
                    <h5 style="font-family:Quicksand">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["SearchBy"], search = Request.QueryString["Search"] })
                    , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToIndividualPages = true })
                    </h5>
                </div>




            </div>


        </div>




        @Html.ActionLink("Home-page", "Index", "Home", null, new { @class = "btn btn-success btn-sm" })
        <hr class='dotted' />
    </div>
</div>

