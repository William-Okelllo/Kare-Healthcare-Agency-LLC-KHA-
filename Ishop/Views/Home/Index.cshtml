@model Ishop.Models.FileUpload



@using Microsoft.AspNet.Identity


<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }
    .curved-table {
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

        .curved-table th,
        .curved-table td {
            padding: 10px;
            border: 1px solid orange;
        }
</style>




<div class="card-header" style="background: linear-gradient(to right, #030a41, #000000); border-radius: 1px">
    <h3 class="card-title" style="color:white">
        <i class="fa fa-home"></i>
        HomePage
    </h3>
</div>

<div class="card" style="background-color:#ffffffc6">
    <div class="card-body">
        <div class="row">


            <div class="col-xl-4">
                <div class="card mb- mb-xl-0" style="border-radius: 24px;">
                    <div class="card-header" style="background-color: #000000; color: white; border-radius: 11px ">
                        <i class="fa fa-home"></i> Welcome
                    </div>
                    <div class="card-body">
                        <div class="col d-flex justify-content-center">
                            <img src="~/Images/homee.png" height="30px" width="30px" class="circle-image" style="text-align:center">

                            <h5 style="font-family:Calibri">
                                @if (DateTime.Now.Hour >= 0 && DateTime.Now.Hour < 12)
                                {<b><i class="fa fa-cloud-sun text-orange"></i> Good Morning , @User.Identity.Name!</b>
                            }
                            else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 18)
                            {<b><i class="fa fa-sun text-orange"></i> Good Afternoon , @User.Identity.Name!</b> }
                        else
                        { <b><i class="fa fa-cloud-sun text-orange"></i> Good Evening , @User.Identity.Name!</b>}
                            </h5>

                        </div>



                        <div style="text-align:center">

                            <div class="dropdown-divider" style="color:forestgreen"></div>
                            <h6>Welcome to your  dashboard.</h6>
                            <h6><i class="fa fa-calendar-day text-primary"></i><b> @DateTime.Now.ToString("dddd,MMMM,dd,yyyy")</b> </h6>



                        </div>



                    </div>
                </div>

            </div>
            <div class="col-xl-2"></div>
            <div class="col-xl-6">


                <div class="row">
                    <div class="col-md-5 col-sm-4 col-9">
                        <div class="info-box" style="border-radius: 14px; background-color: white ">
                            <span><i class="fa fa-user-clock text-navy"></i></span>

                            <div class="info-box-content" style="color: navy">
                                <span class="info-box-text">Today InDirect Hours</span>
                                <span class="info-box-number">11 <small><b>Hours</b></small></span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>

                    <div class="col-md-5 col-sm-4 col-9">
                        <div class="info-box" style="border-radius: 14px; background-color: white ">
                            <span><i class="fa fa-user-clock text-navy"></i></span>

                            <div class="info-box-content" style="color: navy">
                                <span class="info-box-text">Today Direct Hours</span>
                                <span class="info-box-number">11 <small><b>Hours</b></small></span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                </div>

                <div class="small-box bg-navy" style="border-radius: 15px">
                    <div class="inner">


                        <h5> <b><i class="fa  fa-bell"></i> Notifications/Updates</b></h5>
                        <h5><b><span class="badge badge-dark">  12 </span></b> <small> Houses vacant</small></h5>
                        <h5><b><span class="badge badge-dark"> 11</span></b> <small> Houses Occupied</small></h5>

                    </div>
                    <div class="icon">
                        <i class="fa fa-home"></i>
                    </div>

                </div>
            </div>

            </div>

            <div class="dropdown-divider"></div>


        </div>
            </div>



