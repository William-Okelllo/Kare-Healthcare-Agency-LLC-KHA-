@model Ishop.Models.FileUpload



@using Microsoft.AspNet.Identity


<style>
    body {
        background-image: url(../../images/33.jpg);
        background-size: cover;
        font-family: Calibri
    }

    .table-hover > tbody > tr:hover {
        background-color: #D2D2D2;
    }
</style>




<div class="card-header" style="background-color: #a23e09 ">
    <h3 class="card-title" style="color:white">
        <i class="fa fa-home"></i>
        HomePage
    </h3>
</div>

<div class="card" style="background-color:#ffffffc6">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4" style="border-radius: 24px;">
                <!-- Widget: user widget style 2 -->
                <div class="card card-widget widget-user-2" style="border-radius: 24px;">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div style="background-color: black ">

                        <!-- /.widget-user-image -->

                        <h5 style="color:white">

                            <img src="~/Images/gg.ico" height="50" alt="User Avatar"> Welcome @User.Identity.Name


                        </h5>


                    </div>
                    <div class="card-body text-left">

                        <ul style="text-align:left">
                            <li>
                                <i class="fa fa-user-shield"></i> Access Level
                                @if (this.User.IsInRole("Admin"))
                                {<medium style="font-family:Calibri">
                                        <i class="fa fa-user-check text-success"></i>:-Administrator
                                    </medium>}


                                else if (this.User.IsInRole("Employee"))
                                { <medium style="font-family:Calibri">
                                        :-Employee
                                    </medium>}
                                else if (this.User.IsInRole("Staffing_Agency"))
                                { <medium style="font-family:Calibri">
                                        :-Staffing Agency user
                                    </medium>}

                                else if (this.User.IsInRole("Facility"))
                                { <medium style="font-family:Calibri">
                                        Facility
                                    </medium>}
                                else
                                { <medium style="font-family:Calibri">
                                        unknown
                                    </medium>}
                            </li>
                            <li>
                                @if (DateTime.Now.Hour >= 0 && DateTime.Now.Hour < 12)
                                {
                                    <medium style="font-family:Calibri">
                                        <i class="fa fa-cloud-sun text-orange"></i> :-Good Morning
                                    </medium>
                                }
                                else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 18)
                                {
                                    <medium style="font-family:Calibri">
                                        <i class="fa fa-sun text-orange"></i> :-Good Afternoon
                                    </medium>
                                }
                                else
                                {
                                    <medium style="font-family:Calibri">
                                        <i class="fa fa-cloud-sun text-orange"></i> :-Good Evening
                                    </medium>
                                }
                            </li>
                            <li><i class="fa fa-calendar text-success"></i> @DateTime.Now.ToString("dd-MMMM-yyyy")</li>
                        </ul>



                    </div>

                </div>
                <!-- /.widget-user -->
            </div>
            <div class="col-xl-8">
                <div class="card mb- mb-xl-0" style="border-radius: 14px;">
                    <div class="card-header" style="background-color: #a23e09; color: white "><i class="fa fa-spinner"></i> My DashBoard </div>

                    <div class="container-fluid">


                        @foreach (var item in ViewBag.l1)
                        {
                            <div class="row">
                                <div class="col-md-3 col-sm-4 col-9" style="border-radius: 24px;">
                                    <div class="info-box" style="border-radius: 14px; background-color: white ">
                                        <span><i class="fa fa-book-reader text-orange"></i></span>

                                        <div class="info-box-content" style="color: navy">
                                            <span class="info-box-text">Total CheckIns</span>
                                            <span class="info-box-number">@item.Total CheckIns</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                </div>
                                <div class="col-md-3 col-sm-4 col-9" style="border-radius: 24px;">
                                    <div class="info-box" style="border-radius: 14px; background-color: white ">
                                        <span><i class="fa fa-book-reader text-orange"></i></span>

                                        <div class="info-box-content" style="color: navy">
                                            <span class="info-box-text">Today CheckIns</span>
                                            <span class="info-box-number">@item.Today CheckIns</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                </div>
                            </div>
                        }
                        <div class="dropdown-divider"></div>
                        <h8><i class="fas fa-bookmark text-orange"></i> Estimates Monitor</h8>
                        <div class="row">
                            @foreach (var item in ViewBag.l2)
                            {
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right" style="border-radius: 14px;">
                                        <h5 class="description-header" style="color: navy"><i class="fas fa-bookmark text-orange"></i> @item.Total</h5>
                                        <span style="color:navy">Total Estimates</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right" style="border-radius: 14px;">
                                        <h5 class="description-header" style="color: navy"><i class="fas fa-bookmark text-orange"></i> @item.Today</h5>
                                        <span style="color:navy">Today</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right" style="border-radius: 14px;">
                                        <h5 class="description-header" style="color: navy"><i class="fas fa-bookmark text-orange"></i> @item.Approved</h5>
                                        <span style="color:navy">Approved</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right" style="border-radius: 14px;">
                                        <h5 class="description-header" style="color: navy"><i class="fas fa-layer-group"></i> @item.Pending</h5>
                                        <span style="color:navy">Pending</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                            }
                        </div>
                            <div class="dropdown-divider"></div>
                            <h8><i class="fas fa-file-invoice text-orange"></i> Invoices</h8>
                            <div class="row">
                                @foreach (var item in ViewBag.l3)
                                {
                                    <div class="col-sm-3 col-6">
                                        <div class="description-block border-right" style="border-radius: 14px; background-color: #343A40;">
                                            <h5 class="description-header" style="color: white"><i class="fas fa-file-invoice text-white"></i> @item.Total</h5>
                                         
                                            <span style="color:white">Total Invoices</span>
                                        </div>
                                        <!-- /.description-block -->
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        <div class="description-block border-right" style="border-radius: 14px; background-color: #343A40;">
                                            <h5 class="description-header" style="color: white"><i class="fas fa-file-invoice text-white"></i> @item.Today</h5>
                                            <span style="color:white">Today</span>
                                        </div>
                                        <!-- /.description-block -->
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        <div class="description-block border-right" style="border-radius: 14px; background-color: #343A40;">
                                            <h5 class="description-header" style="color: white"><i class="fas fa-file-invoice text-white"></i> @item.Pending</h5>
                                            <span style="color:white">Pending</span>
                                        </div>
                                        <!-- /.description-block -->
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        <div class="description-block border-right" style="border-radius: 14px; background-color: #343A40;">
                                            <h5 class="description-header" style="color: white"><i class="fas fa-file-invoice text-white"></i> @item.Paid</h5>
                                            <span style="color:white">Paid</span>
                                        </div>
                                        <!-- /.description-block -->
                                    </div>

                                }
                            </div>
                        </div>
                </div>

</div>
</div>
