@model IShop.Core.ReportGroup

@{
    ViewBag.Title = "Create";
}
<br />
<br />
<br />
<br />
<div class="col d-flex justify-content-center">
    <div class="col-md-9 col-sm-9 col-9">
        <div class="card mb- mb-xl-0" style="border-radius: 24px;">
            <div class="card-header" style="background-color: #0656A5; color: white">
                <i class="fa fa-chart-line text-white nav-icon"></i> Edit Report Group
            </div>
            <div class="card-body">



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label><i class="fa fa-bookmark text-primary"></i> @Html.LabelFor(model => model.Description) </label>
                            @Html.EditorFor(model => model.Description, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm ",
                               placeholder = "Description",
                               @required = "required",


                           }
                       })

                        </div>

                        <div class="col-md-3 mb-3">
                            <label><i class="fa fa-layer-group text-orange"></i> @Html.LabelFor(model => model.Type)</label>
                            @{
                                List<SelectListItem> t = new List<SelectListItem>();
                                t.Add(new SelectListItem
                                {
                                    Text = "Charts",
                                    Value = "Charts",
                                });
                                t.Add(new SelectListItem
                                {
                                    Text = "Report",
                                    Value = "Report",
                                });





                            }@Html.DropDownListFor(model => model.Type, t, "---Select  Reports Type---", new { @class = "form-control form-control-sm " })
                        </div>
                        <div class="form-group col-md-2">
                            <label><i class="fa fa-tags text-primary"></i> @Html.LabelFor(model => model.Menu_order) </label>
                            @Html.EditorFor(model => model.Menu_order, new
                       {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-sm ",
                               placeholder = "Menu_order",
                               @required = "required",


                           }
                       })

                        </div>
                    </div>





                    <div class="dropdown-divider"></div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save " class="btn btn-warning" />
                            || @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn" })
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>